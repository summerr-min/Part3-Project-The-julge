{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "bundler", // Vite 사용 시 권장
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noUnusedLocals": true, // 사용 안 하는 변수 경고
    "noUnusedParameters": true, // 사용 안 하는 파라미터 경고
    "baseUrl": ".",
    "paths": {
      "@/": ["src/"]
    }
  },
  "ts-node": { "esm": true },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
